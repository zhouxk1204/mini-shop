page {
  padding-bottom: 90rpx;
}
.cart .address-info {
  height: 124rpx;
  padding: 20rpx;
}
.cart .address-info .address-user-info {
  display: flex;
  align-items: center;
}
.cart .address-info .address-user-info .user-name {
  flex: 1;
}
.cart .address-info .address-user-info .user-phone {
  text-align: right;
  flex: 1;
}
.cart .cart-add-address {
  padding: 20rpx;
  height: 124rpx;
}
.cart .cart-add-address button {
  width: 60%;
}
.cart .cart-area .cart-title {
  font-size: 32rpx;
  padding: 20rpx;
  color: var(--themeColor);
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
}
.cart .cart-area .cart-content .cart-item {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  border-bottom: 1px solid #ccc;
}
.cart .cart-area .cart-content .cart-item .cart-select {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart-area .cart-content .cart-item navigator {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart-area .cart-content .cart-item navigator image {
  width: 90%;
}
.cart .cart-area .cart-content .cart-item .cart-info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart .cart-area .cart-content .cart-item .cart-info .goods-name {
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart .cart-area .cart-content .cart-item .cart-info .goods-price-area {
  display: flex;
  align-items: center;
}
.cart .cart-area .cart-content .cart-item .cart-info .goods-price-area .goods-price {
  flex: 1;
  font-size: 32rpx;
  color: var(--themeColor);
}
.cart .cart-area .cart-content .cart-item .cart-info .goods-price-area .goods-change-count-area {
  flex: 1;
  display: flex;
  align-items: center;
}
.cart .cart-area .cart-content .cart-item .cart-info .goods-price-area .goods-change-count-area view {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  width: 60rpx;
  height: 60rpx;
  border: 1px solid #ccc;
}
.cart .cart-area .cart-content .cart-item .cart-info .goods-price-area .goods-change-count-area text.goods-count {
  flex: 1;
  width: 60rpx;
  text-align: center;
}
.cart .cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-top: 1px solid #ccc;
  padding-left: 16rpx;
}
.cart .cart-footer .select-all {
  flex: 2;
}
.cart .cart-footer .total-price-area {
  flex: 3;
}
.cart .cart-footer .total-price-area view {
  text-align: right;
  padding-right: 10rpx;
}
.cart .cart-footer .total-price-area view text {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart .cart-footer .pay {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 2;
  background-color: #f00;
  color: #fff;
  font-size: 32rpx;
  height: 89rpx;
  width: 100%;
}
